<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtField_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/Cauta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Cauta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/teal_200"
        android:text="Cauta"
        app:layout_constraintBottom_toTopOf="@+id/Sterge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtField_message" />

    <Button
        android:id="@+id/Sterge"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="104dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/design_default_color_primary_dark"
        android:text="Sterge "
        app:layout_constraintBottom_toTopOf="@+id/textView_response"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Cauta" />

    <TextView
        android:id="@+id/textView_response"
        android:layout_width="337dp"
        android:layout_height="119dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Linkul apare in zona asta"
        android:textFontWeight="@integer/material_motion_duration_medium_2"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Sterge" />


</androidx.constraintlayout.widget.ConstraintLayout>